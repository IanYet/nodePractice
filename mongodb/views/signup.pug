extends layout.pug
block bod
  form(action="/signup", method="POST")
    fieldset
      legend Sign Up
      p
        label first
        input(name="user[first]", type="text")
      p
        label last
        input(name="user[last]", type="text")
      p
        label email
        input(name="user[email]", type="text")
      p
        label password
        input(name="user[password]", type="password")
      p
        button Submit
      p
        a(href="/") Go back